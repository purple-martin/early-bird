<div class='flex h-screen'>
  <!-- Left Pane -->
  <div class='hidden lg:flex items-center justify-center flex-1 bg-white text-black'>
    <div class='max-w-md text-center'>PURPLE MARTIN</div>
  </div>
  <!-- Right Pane -->
  <div class='w-full bg-gray-100 lg:w-1/2 flex items-center justify-center'>
    <div class='max-w-md w-full p-6'>
      <h1 class='text-3xl font-semibold mb-6 text-black text-center'>PURPLE MARTIN</h1>
      <h1 class='text-sm font-semibold mb-6 text-gray-500 text-center'>There's a new bird in town...</h1>
      <form
        action='#'
        method='POST'
        class='space-y-4'>
        <div>
          <label
            for='email'
            class='block text-sm font-medium text-gray-700'
