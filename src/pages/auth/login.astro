---
import Layout from '../../layouts/GuestLayout.astro';
import LoginPage from '../../components/auth/Login.astro';

const metadata = {
  title: 'login',
};
---

<Layout metadata={metadata}>
  <LoginPage
    action="/api/login"
    title="PURPLE MARTIN"
    subtitle="there's a new bird in town."
    inputs={[
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
      {
        type: 'password',
        name: 'password',
        label: 'Password',
      }
    ]}
    description="Sign in to your account."
    button="LOG IN"
  />
</Layout>
